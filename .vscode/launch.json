    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/var/www/laravel-studio": "${workspaceFolder:laravel-studio}/src",
                "/var/www/packages/laravel-forum": "${workspaceFolder:laravel-forum}"
            },
            "port": 9001,
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ]
}